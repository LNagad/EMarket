@using EMarket.Core.Application.ViewModels.Category;
@model SaveCategoryViewModel
@{
    bool editMode = Model.Id == 0 ? false : true;
}

<div class="col-12 d-flex justify-content-center">
    <div class="col-5">
        <div class="card-header bg-dark d-flex justify-content-center align-items-center">
            <h4 class="text-white">@(editMode ? $"Editando categoria: {Model.Name}" : "Creando nueva categoria")</h4>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="Category" asp-action="@(editMode ? "Edit" : "Create")" class="d-flex flex-column align-items-center">
                <div class="col-9 mb-3">
                    <label asp-for="Name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-9 mb-3">
                    <label asp-for="Description" class="form-label">Descripcion</label>
                    <input type="text" class="form-control" asp-for="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input type="text" type="hidden" class="form-control" asp-for="Id">
                
                <div class="col-9 d-flex justify-content-between">
                    <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Volver atras</a>
                    <button class="btn btn-success">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>