@using EMarket.Core.Application.ViewModels.Categories;
@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Categorias";
}
<div class="col-12">
    <div class="d-flex justify-content-end">
        <a class="btn btn-outline-primary" asp-controller="Category" asp-action="Create">Crear nueva categoria</a>
    </div>
    <div class="d-flex justify-content-center">
        @if (Model == null || Model.Count == 0)
        {
            <div class="card-header bg-dark d-flex justify-content-center align-items-center">
                <h4 class="text-white">No hay categorias creadas</h4>
            </div>
        }
        else
        {
            @foreach (CategoryViewModel item in Model)
            {
                <div class="card">
                    <div class="card-header bg-dark d-flex justify-content-center">
                        <h4 class="text-white">@item.Name</h4>
                    </div>
                    <div class="card-body">
                        <div>
                            <p class="p-lg-5">@item.Description</p>
                            <span class="d-flex justify-content-between">Anuncios: <p>@item.Advertises.Count </p> </span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id">Editar</a>
                            <a asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id">Eliminar</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>