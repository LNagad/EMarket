@using EMarket.Core.Application.ViewModels.Category;
@model SaveCategoryViewModel
@{
   
}

<div class="col-12 d-flex justify-content-center">
    <div class="col-5">
        <div class="card-header bg-dark d-flex justify-content-center align-items-center">
            <h4 class="text-white">
                Estas seguro que deseas eliminar la categoria: <span class="text-danger">@Model.Name</span>?
            </h4>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="Category" asp-action="Delete" class="d-flex flex-column align-items-center">
                
                <div class="col-12 d-flex justify-content-between">
                    <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Volver atras</a>
                    <button class="btn btn-danger">Eliminar</button>
                </div>
                <input asp-for="Id" hidden />
            </form>
        </div>
    </div>
</div>